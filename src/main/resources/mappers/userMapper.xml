<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.manager.user.dao.UserDAO">
 	<select id="existUserByLoginId" parameterType="string" resultType="boolean">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE
 			`userId` = #{userId}
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`userId`
 			,`password`
 			,`name`
 			,`createdAt`
 			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			,#{password}
 			,#{name}
 			,NOW()
 			,NOW()
 		)
 	</insert>
	
	<select id="selectUserByUserIdAndPassword" parameterType="map" resultType="com.manager.user.model.User">
		SELECT
			`id`
			,`userId`
			,`password`
			,`name`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`userId` = #{userId}
			AND
			`password` = #{password}
	</select>
 </mapper>