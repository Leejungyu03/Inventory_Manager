<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.manager.product.dao.ProductDAO">
	<select id="selectProduct" resultType="com.manager.product.model.Product">
		SELECT
			`id`
			,`userId`
			,`userName`
			,`title`
			,`content`
			,`stock`
			,`imageUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`product`
		ORDER BY 
			`updatedAt` DESC
	</select>
	
	<select id="selectProductByProductId" resultType="com.manager.product.model.Product">
		SELECT
			`id`
			,`userId`
			,`userName`
			,`title`
			,`content`
			,`stock`
			,`imageUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`product`
		WHERE
			`id` = #{productId}
	</select>

 	<insert id="insertProduct" parameterType="map">
 		INSERT INTO `product`
 		(
 			`userId`
 			,`userName`
			,`title`
			,`content`
			,`stock`
			,`imageUrl`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(	
 			#{userId}
 			,#{userName}
 			,#{title}
 			,#{content}
 			,#{stock}
 			,#{imageUrl}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	
 	<update id="updateProduct" parameterType="map">
 		UPDATE `product`
 		SET
 			`title` = #{title}
			,`content` = #{content}
			,`stock` = #{stock}
			<!-- imagePath가 있을 때에만 수정한다. -->
			<if test="imageUrl != null">
				,`imageUrl` = #{imageUrl}
			</if>
			,`updatedAt` = NOW()
		WHERE
			`id` = #{productId}
 	</update>
 	
 	<delete id="deleteProductByProductId" parameterType="int">
	 	DELETE
	 	FROM
	 		`product`
		WHERE
			`id` = #{productId}
 	</delete>
 </mapper>